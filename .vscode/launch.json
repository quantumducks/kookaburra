{
  "configurations": [
    {
      "name": "Current Cucumber Exposition Feature",
      "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
      "windows": {
        "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber"
      },
      "request": "launch",
      "cwd": "${workspaceFolder}/extensions/exposition",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "args": [
        "${file}"
      ],
      "env": {
        "TOA_DEBUG": "1"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    }
  ]
}