{
  "name": "@toa.io/toa",
  "version": "0.3.0",
  "private": true,
  "description": "Microservice operations distributed runtime",
  "homepage": "https://toa.io",
  "author": {
    "name": "Artem Gurtovoi",
    "url": "https://github.com/temich"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toa-io/toa.git"
  },
  "bugs": {
    "url": "https://github.com/toa-io/toa/issues"
  },
  "workspaces": [
    "runtime/*",
    "connectors/*",
    "extensions/*",
    "libraries/*",
    "operations",
    "userland",
    "types"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "bin": {
    "toa": "runtime/runtime/bin/toa"
  },
  "peerDependencies": {
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@cucumber/cucumber": "9.1.2",
    "@types/jest": "28.1.1",
    "@types/node": "20.3.1",
    "@types/randomstring": "1.1.8",
    "clone-deep": "4.0.1",
    "cucumber-tsflow": "4.0.6",
    "dotenv": "16.0.3",
    "eslint-config-standard-with-typescript": "35.0.0",
    "execa": "5.1.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "knex": "2.4.2",
    "node-fetch": "2.6.11",
    "randomstring": "1.2.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1"
  },
  "scripts": {
    "prepare": "npx husky install",
    "test": "npm run test:lint && npm run test:unit && npm run test:features:unit && npm run test:samples:unit",
    "test:lint": "npx eslint .",
    "test:unit": "npx jest --roots runtime connectors extensions operations libraries features userland",
    "test:integration": "npx jest --roots integration --runInBand --testTimeout 180000",
    "test:features": "npx cucumber-js",
    "test:features:unit": "npx cucumber-js -p norm",
    "test:samples:unit": "toa replay userland/example/components/*",
    "test:samples:all": "TOA_DEV=1 toa replay userland/example",
    "test:all": "npm run ci && npm run test && npm run test:integration && npm run test:features",
    "integration:deploy": "npm run publish:local && npx toa deploy ./integration/context",
    "lint": "npx standard --verbose --fix | npx snazzy",
    "npm:login:local": "npm adduser --registry http://localhost:4873 --auth-type=legacy",
    "version:dev": "npx lerna@6.5.1 version --conventional-prerelease --preid dev --no-commit-hooks --no-changelog --yes --no-git-tag-version",
    "publish:local": "npm publish --workspaces --registry=http://localhost:4873",
    "canary": "npx lerna@6.5.1 publish --canary --preid dev --no-commit-hooks --no-changelog --yes --message \"ci: prerelease\" --git-tag-command \"echo %s\" --sign-git-commit",
    "cluster": "chmod +x ./integration/scripts/cluster.sh && ./integration/scripts/cluster.sh",
    "buildx": "docker buildx create --name toa --use && docker buildx inspect --bootstrap",
    "setup": "docker compose up -d && npm run cluster && npm run buildx && npm run publish:local && npm ci && toa deploy ./integration/context",
    "ci": "npm exec --workspaces -c \"rm -rf node_modules\" && npm i",
    "transpile": "npm run transpile --workspaces --if-present"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/runtime",
      "<rootDir>/connectors",
      "<rootDir>/extensions",
      "<rootDir>/operations",
      "<rootDir>/libraries",
      "<rootDir>/integration",
      "<rootDir>/features",
      "<rootDir>/userland"
    ],
    "testMatch": [
      "**/(*.)+(test).(js|ts)"
    ],
    "testPathIgnorePatterns": [
      ".*/transpiled/"
    ],
    "bail": true
  }
}
