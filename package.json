{
  "name": "@toa.io/toa",
  "private": true,
  "description": "Microservice operations distributed runtime",
  "homepage": "https://toa.io",
  "author": {
    "name": "Artem Gurtovoi",
    "url": "https://github.com/temich"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toa-io/toa.git"
  },
  "bugs": {
    "url": "https://github.com/toa-io/toa/issues"
  },
  "workspaces": [
    "runtime/*",
    "connectors/*",
    "extensions/*",
    "libraries/*",
    "operations",
    "userland",
    "types"
  ],
  "engines": {
    "node": ">= 18.0.0"
  },
  "bin": {
    "toa": "runtime/runtime/bin/toa"
  },
  "peerDependencies": {
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@cucumber/cucumber": "10.0.1",
    "@types/jest": "29.5.3",
    "@types/node": "20.8.10",
    "@types/randomstring": "1.1.8",
    "clone-deep": "4.0.1",
    "cucumber-tsflow": "4.2.1",
    "dotenv": "16.0.3",
    "eslint-config-standard-with-typescript": "38.0.0",
    "execa": "5.1.1",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-diff": "29.6.2",
    "knex": "2.4.2",
    "mongodb": "6.3.0",
    "randomstring": "1.3.0",
    "testcontainers": "10.2.2",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1"
  },
  "scripts": {
    "prepare": "npx husky install",
    "install": "npm run transpile",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "npx eslint .",
    "test:unit": "npx jest --roots runtime connectors extensions operations libraries features userland",
    "test:stage": "npx jest --roots userland/example/stage --testPathIgnorePatterns .*/transpiled/",
    "test:integration": "npx jest --roots integration --runInBand --testTimeout 180000",
    "features": "npx cucumber-js && npm run features --workspaces --if-present",
    "test:samples:unit": "toa replay userland/example/components/*",
    "test:samples:all": "TOA_DEV=1 toa replay userland/example",
    "test:all": "npm run test && npm run test:integration && npm run test:stage && npm run features",
    "lint": "npx eslint . --fix",
    "npm:login:local": "npm adduser --registry http://localhost:4873 --auth-type=legacy",
    "version:local": "npx lerna@7.3.0 version --conventional-prerelease --preid local --no-commit-hooks --no-changelog --yes --no-git-tag-version && git commit -am 'chore: local bump' --no-verify",
    "publish:local": "npm publish -ws --registry=http://localhost:4873",
    "ci:local": "npm run version:local && npm run publish:local",
    "cluster": "chmod +x ./integration/scripts/cluster.sh && ./integration/scripts/cluster.sh",
    "buildx": "docker buildx create --name toa --use && docker buildx inspect --bootstrap",
    "setup": "docker compose up -d && npm run cluster && npm run buildx && npm run publish:local && npm ci && toa deploy ./integration/context",
    "ci": "rm -rf node_modules && npm exec --workspaces -c \"rm -rf node_modules\" && npm i",
    "transpile": "npx lerna@7.3.0 run transpile",
    "retranspile": "npm exec --workspaces -c \"rm -rf transpiled\" && npm run transpile",
    "compose": "docker compose rm -f -s -v && docker compose up -d"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/runtime",
      "<rootDir>/connectors",
      "<rootDir>/extensions",
      "<rootDir>/operations",
      "<rootDir>/libraries",
      "<rootDir>/integration",
      "<rootDir>/features",
      "<rootDir>/userland"
    ],
    "testMatch": [
      "**/(*.)+(test).(js|ts)"
    ],
    "testPathIgnorePatterns": [
      ".*/transpiled/",
      "<rootDir>/userland/example/stage"
    ],
    "bail": true
  }
}
